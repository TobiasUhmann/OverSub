{
	"manifest_version": 2,
	
	"name": "OverSub",
	"description": "blend in subtitle overlays for videos",
	"version": "0.3",
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"activeTab"
	],
	
	"web_accessible_resources" : [
		"subtitlesBox/SubBox.html",
		"subtitlesBox/style.css",
		"subtitlesBox/script.js", 
		"jquery-3.1.1.js"
	]
}